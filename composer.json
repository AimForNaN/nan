{
	"name": "truefusion/nan",
	"description": "NaN micro-framework",
	"license": "MIT",
	"autoload": {
		"psr-4": {
			"NaN\\": "src/"
		}
	},
    "require": {
		"ext-pdo": "*",
        "vlucas/phpdotenv": "^5.6",
		"psr/http-server-handler": "^1.0",
		"guzzlehttp/psr7": "^2.6",
		"league/plates": "^3.5",
		"psr/container": "^2.0",
		"psr/http-server-middleware": "^1.0",
		"filp/whoops": "^2.17"
	},
	"require-dev": {
		"monolog/monolog": "^3.6",
		"pestphp/pest": "^2.34",
		"phpbench/phpbench": "^1.3"
	},
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true
		}
	},
	"scripts": {
		"benchmark": "phpbench run benchmarks --report=benchmark",
		"test": "pest"
	}
}
